                            .form__group.row
                                .col-6.col-xs-12
                                    input.input.input--full(type="text" placeholder="Ваш бюджет?")
                                .col-6.col-xs-12
                                    input.input.input--full(type="text" placeholder="Какая услуга интересует?")
